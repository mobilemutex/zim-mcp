# MCP ZIM Server Configuration Example via Environment Variables

# Directory containing ZIM files
ZIM_FILES_DIRECTORY=./zim_files

# Search settings
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT=30
DEFAULT_CONTENT_FORMAT=text
MAX_CONTENT_LENGTH=50000

# Cache settings (in bytes for content cache)
CONTENT_CACHE_SIZE=52428800  # 50MB
ARCHIVE_CACHE_SIZE=10
SEARCH_CACHE_SIZE=1000

# Performance settings
MAX_CONCURRENT_SEARCHES=5
ENABLE_PARALLEL_SEARCH=true

# Logging settings
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_LOGGING=false

